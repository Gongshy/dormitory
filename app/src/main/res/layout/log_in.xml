<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_top"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffcd2626">
        <TextView
            android:id="@+id/title_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="登陆验证"
            android:textColor="#ffffffff"
            android:textSize="20.0dip"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="265dip">
        <ImageView
            android:id="@+id/pictop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/peking_door"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="60.0dip"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/student_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="60px"
            android:text="学号："
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
        <EditText
            android:id="@+id/studentid"
            android:textSize="40px"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_search_box_edittext_keyword_background"
            android:layout_toRightOf="@+id/student_id"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60.0dip">

        <EditText
            android:id="@+id/studentpd"
            android:textSize="40px"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_search_box_edittext_keyword_background"
            android:layout_toRightOf="@+id/student_pd"/>

        <TextView
            android:id="@+id/student_pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="60px"
            android:text="密码："
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="59dp">
        <Button
            android:id="@+id/student_vf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="登录"/>
    </RelativeLayout>
</LinearLayout>